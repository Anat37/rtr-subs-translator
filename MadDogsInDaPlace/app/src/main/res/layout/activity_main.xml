<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recognitionLanguageSpinner"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="15dp"
        android:background="#00000000"
        android:popupBackground="#BB000000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageArrow"
        android:layout_toLeftOf="@id/recognitionLanguageSpinner"
        android:gravity="right"
        android:background="@android:drawable/arrow_down_float"
        android:rotation="90"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destinationLanguageSpinner"
        android:layout_toLeftOf="@id/imageArrow"
        android:gravity="right"
        android:textSize="15dp"
        android:background="#00000000"
        android:popupBackground="#BB000000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />
    <TextView
        android:id="@+id/warningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#FFFF0000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text=""/>
    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#FFFF0000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/warningText"
        android:text=""/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startButton"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#7d010000"
        android:layout_marginBottom="5dp"
        android:onClick="onStartButtonClick"
        android:layout_above="@+id/detectedText"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/finishButton"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#7d010000"
        android:layout_marginBottom="5dp"
        android:onClick="onStartButtonClick"
        android:layout_above="@+id/detectedText"/>

    <EditText
        android:id="@+id/detectedText"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFFFF"
        android:textSize="30sp" />
</RelativeLayout>
