<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/word_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/default_text_view"
                android:layout_width="300dp"
                android:layout_height="@dimen/word_height"

                android:gravity="start|center"
                android:padding="@dimen/word_padding"
                android:text="Слово"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/russian_text_view"
                android:layout_width="300dp"
                android:layout_height="@dimen/word_height"

                android:gravity="start|center"
                android:padding="@dimen/word_padding"
                android:text="Перевод"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recLang"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/word_height"
                android:gravity="center_vertical"
                android:text="ENG"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/destLang"
                android:layout_width="40dp"
                android:layout_height="@dimen/word_height"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="RUS"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/delete_word"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:gravity="center_vertical|center_horizontal"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="12pt" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>